{
  "name": "@evolu/server",
  "version": "1.0.17",
  "description": "Node.js server for Evolu",
  "author": "Daniel Steigerwald <daniel@steigerwald.cz>",
  "license": "MIT",
  "repository": "evoluhq/evolu",
  "bugs": {
    "url": "https://github.com/evoluhq/evolu/issues"
  },
  "homepage": "https://evolu.dev",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist/**",
    "src/**",
    "README.md"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "rm -rf dist && tsc",
    "lint": "TIMING=1 eslint src --ext .ts,.tsx",
    "clean": "rm -rf .turbo node_modules dist",
    "format": "prettier --write \"src/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@evolu/common": "workspace:*",
    "better-sqlite3": "^9.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "effect": "2.0.0-next.55",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@evolu/tsconfig": "workspace:*",
    "@types/better-sqlite3": "^7.6.7",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.2",
    "eslint": "^8.54.0",
    "eslint-config-evolu": "workspace:*",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.15"
  }
}
