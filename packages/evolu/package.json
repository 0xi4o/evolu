{
  "name": "evolu",
  "version": "0.10.1",
  "description": "React Hooks library for local-first software with end-to-end encrypted backup and sync using SQLite and CRDT.",
  "keywords": [
    "evolu",
    "react",
    "hooks",
    "local-first",
    "E2EE",
    "SQLite",
    "CRDT"
  ],
  "author": "Daniel Steigerwald <daniel@steigerwald.cz>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/evoluhq/evolu/issues"
  },
  "homepage": "https://github.com/evoluhq/evolu",
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "exports": "./dist/src/index.js",
  "files": [
    "dist/sqlite/**",
    "dist/src/**",
    "src/**",
    "README.md"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "rm -rf dist && tsc && cp ../../README.md ./ && cp ./sqlite/sqlite3.wasm ./dist/sqlite/",
    "build-sqlite": "scripts/build-sqlite.sh",
    "lint": "TIMING=1 eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "format": "prettier --write \"src/*.{ts,tsx,md}\"",
    "proto": "pnpm protoc --ts_out ./src --proto_path protos protos/protobuf.proto --ts_opt eslint_disable && pnpm format"
  },
  "dependencies": {
    "@noble/hashes": "^1.2.0",
    "@protobuf-ts/runtime": "^2.8.2",
    "@scure/bip39": "^1.1.1",
    "kysely": "^0.23.4",
    "murmurhash": "^2.0.1",
    "nanoid": "^4.0.1"
  },
  "devDependencies": {
    "@evolu/tsconfig": "workspace:0.0.2",
    "@protobuf-ts/plugin": "^2.8.2",
    "@protobuf-ts/protoc": "^2.8.2",
    "@types/node": "^18.11.19",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/web-locks-api": "^0.0.2",
    "array-shuffle": "^3.0.0",
    "eslint": "^8.33.0",
    "eslint-config-evolu": "workspace:0.0.2",
    "fp-ts": "^2.13.1",
    "openpgp": "^5.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "user-agent-data-types": "^0.3.0",
    "vitest": "^0.28.4",
    "zod": "^3.20.2"
  },
  "peerDependencies": {
    "fp-ts": "^2.12.3",
    "openpgp": "^5.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.19.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.15"
  }
}
